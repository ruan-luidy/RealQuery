<hc:Window
  x:Class="RealQuery.Views.Windows.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:hc="https://handyorg.github.io/handycontrol"
  xmlns:local="clr-namespace:RealQuery.Views.Windows"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:viewmodels="clr-namespace:RealQuery.ViewModels"
  Title="RealQuery - Visual ETL Tool"
  Width="1400"
  Height="900"
  MinWidth="1000"
  MinHeight="600"
  mc:Ignorable="d">

  <hc:Window.DataContext>
    <viewmodels:MainViewModel />
  </hc:Window.DataContext>

  <hc:Window.NonClientAreaContent>
    <Grid>
      <!--  Toolbar no NonClientArea para visual mais moderno  -->
      <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
        <Button
          Margin="5,0"
          Command="{Binding ImportDataCommand}"
          Content="Import"
          IsEnabled="{Binding IsProcessing, Converter={StaticResource Boolean2BooleanReConverter}}"
          Style="{StaticResource ButtonPrimary}" />
        <Button
          Margin="5,0"
          Command="{Binding ExportDataCommand}"
          Content="Export"
          IsEnabled="{Binding IsProcessing, Converter={StaticResource Boolean2BooleanReConverter}}"
          Style="{StaticResource ButtonDefault}" />
        <Separator />
        <Button
          Margin="5,0"
          Command="{Binding ExecuteCodeCommand}"
          Content="Execute"
          IsEnabled="{Binding IsProcessing, Converter={StaticResource Boolean2BooleanReConverter}}"
          Style="{StaticResource ButtonSuccess}" />
        <Button
          Margin="5,0"
          Command="{Binding ClearAllCommand}"
          Content="Clear"
          IsEnabled="{Binding IsProcessing, Converter={StaticResource Boolean2BooleanReConverter}}"
          Style="{StaticResource ButtonWarning}" />
        <Separator />
        <Button
          Margin="5,0"
          Command="{Binding SaveWorkspaceCommand}"
          Content="Save"
          Style="{StaticResource ButtonInfo}" />
      </StackPanel>
    </Grid>
  </hc:Window.NonClientAreaContent>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <!--  Main Content  -->
      <RowDefinition Height="Auto" />
      <!--  StatusBar  -->
    </Grid.RowDefinitions>

    <!--  Loading Overlay  -->
    <hc:LoadingCircle
      Grid.RowSpan="2"
      Panel.ZIndex="999"
      Visibility="{Binding IsProcessing, Converter={StaticResource Boolean2VisibilityConverter}}" />

    <!--  Main Content Area  -->
    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition
          Width="350"
          MinWidth="200"
          MaxWidth="500" />
        <!--  Steps Panel  -->
        <ColumnDefinition Width="Auto" />
        <!--  Splitter  -->
        <ColumnDefinition Width="*" MinWidth="400" />
        <!--  Data + Code  -->
      </Grid.ColumnDefinitions>

      <!--  Left Panel: Steps List  -->
      <hc:Card
        Grid.Column="0"
        Margin="10"
        Effect="{StaticResource EffectShadow2}">
        <DockPanel>
          <hc:UniformSpacingPanel
            Margin="10"
            DockPanel.Dock="Top"
            Spacing="10">
            <TextBlock Style="{StaticResource TextBlockTitle}" Text="Transformation Steps" />
            <Button
              Command="{Binding ClearStepsCommand}"
              Content="Clear All"
              Style="{StaticResource ButtonDanger}" />
          </hc:UniformSpacingPanel>

          <ListBox
            Margin="10"
            ItemsSource="{Binding TransformationSteps}"
            SelectedItem="{Binding SelectedStep}">
            <ListBox.ItemTemplate>
              <DataTemplate>
                <hc:Card>
                  <StackPanel>
                    <StackPanel Orientation="Horizontal">
                      <TextBlock FontWeight="Bold" Text="{Binding StepNumber, StringFormat='{}{0}. '}" />
                      <TextBlock FontWeight="Bold" Text="{Binding Title}" />
                      <TextBlock
                        Margin="5,0"
                        FontSize="12"
                        Text="{Binding StatusIcon}" />
                    </StackPanel>
                    <TextBlock
                      FontSize="11"
                      Foreground="Gray"
                      Text="{Binding Description}"
                      TextWrapping="Wrap" />
                    <StackPanel Margin="0,2,0,0" Orientation="Horizontal">
                      <TextBlock
                        FontSize="10"
                        Foreground="Gray"
                        Text="{Binding ExecutionTime, StringFormat='Time: {0:mm\\:ss\\.fff}'}"
                        Visibility="{Binding ExecutionTime, Converter={StaticResource Object2VisibilityConverter}}" />
                      <TextBlock
                        Margin="10,0,0,0"
                        FontSize="10"
                        Foreground="Gray"
                        Text="{Binding OutputRowCount, StringFormat='Rows: {0:N0}'}"
                        Visibility="{Binding OutputRowCount, Converter={StaticResource Object2VisibilityConverter}}" />
                    </StackPanel>
                    <TextBlock
                      FontSize="10"
                      Foreground="Red"
                      Text="{Binding ErrorMessage}"
                      TextWrapping="Wrap"
                      Visibility="{Binding HasError, Converter={StaticResource Boolean2VisibilityConverter}}" />
                  </StackPanel>
                </hc:Card>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </DockPanel>
      </hc:Card>

      <!--  GridSplitter  -->
      <GridSplitter
        Grid.Column="1"
        HorizontalAlignment="Center"
        VerticalAlignment="Stretch"
        Style="{StaticResource GridSplitter.Handy}" />

      <!--  Right Panel: Data Grid + Code Editor  -->
      <Grid Grid.Column="2">
        <Grid.RowDefinitions>
          <RowDefinition Height="3*" MinHeight="200" />
          <!--  Data Grid (60%)  -->
          <RowDefinition Height="Auto" />
          <!--  Splitter  -->
          <RowDefinition Height="2*" MinHeight="150" />
          <!--  Code Editor (40%)  -->
        </Grid.RowDefinitions>

        <!--  Data Preview Grid  -->
        <hc:Card
          Grid.Row="0"
          Margin="10"
          Effect="{StaticResource EffectShadow2}">
          <DockPanel>
            <hc:UniformSpacingPanel
              Margin="10"
              DockPanel.Dock="Top"
              Spacing="10">
              <TextBlock Style="{StaticResource TextBlockTitle}" Text="Data Preview" />
              <TextBlock
                VerticalAlignment="Center"
                FontSize="12"
                Foreground="Gray">
                <TextBlock.Text>
                  <MultiBinding StringFormat="{}{0:N0} rows × {1} columns">
                    <Binding Path="RowCount" />
                    <Binding Path="ColumnCount" />
                  </MultiBinding>
                </TextBlock.Text>
              </TextBlock>
            </hc:UniformSpacingPanel>

            <DataGrid
              Margin="10"
              AutoGenerateColumns="True"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              GridLinesVisibility="Vertical"
              HeadersVisibility="Column"
              IsReadOnly="True"
              ItemsSource="{Binding CurrentData.DefaultView}"
              Style="{StaticResource DataGrid.Small}"
              VerticalGridLinesBrush="{DynamicResource SecondaryRegionBrush}" />
          </DockPanel>
        </hc:Card>

        <!--  GridSplitter  -->
        <GridSplitter
          Grid.Row="1"
          Height="5"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Center"
          Style="{StaticResource GridSplitter.Handy}" />

        <!--  Code Editor Area  -->
        <hc:Card
          Grid.Row="2"
          Margin="10"
          Effect="{StaticResource EffectShadow2}">
          <DockPanel>
            <hc:UniformSpacingPanel
              Margin="10"
              DockPanel.Dock="Top"
              Spacing="10">
              <TextBlock Style="{StaticResource TextBlockTitle}" Text="C# Code Editor" />
              <Button
                Command="{Binding ExecuteCodeCommand}"
                Content="Execute"
                IsEnabled="{Binding IsProcessing, Converter={StaticResource Boolean2BooleanReConverter}}"
                Style="{StaticResource ButtonSuccess}" />
              <Button Content="Templates" Style="{StaticResource ButtonInfo}" />
            </hc:UniformSpacingPanel>

            <!--  Placeholder para AvalonEdit (será adicionado via código)  -->
            <Border
              x:Name="CodeEditorContainer"
              Margin="10"
              BorderBrush="LightGray"
              BorderThickness="1"
              CornerRadius="3">
              <TextBox
                AcceptsReturn="True"
                AcceptsTab="True"
                FontFamily="Consolas"
                FontSize="14"
                HorizontalScrollBarVisibility="Auto"
                Text="{Binding CSharpCode, UpdateSourceTrigger=PropertyChanged}"
                VerticalScrollBarVisibility="Auto" />
            </Border>
          </DockPanel>
        </hc:Card>
      </Grid>
    </Grid>

    <!--  StatusBar  -->
    <StatusBar Grid.Row="1">
      <StatusBarItem>
        <TextBlock Text="{Binding StatusMessage}" />
      </StatusBarItem>
      <Separator />
      <StatusBarItem>
        <TextBlock Text="{Binding RowCount, StringFormat='Rows: {0:N0}'}" />
      </StatusBarItem>
      <StatusBarItem>
        <TextBlock Text="{Binding ColumnCount, StringFormat='Columns: {0}'}" />
      </StatusBarItem>
      <Separator />
      <StatusBarItem>
        <TextBlock Text="{Binding LastExecutionTime, StringFormat='Last execution: {0}'}" />
      </StatusBarItem>
    </StatusBar>
  </Grid>
</hc:Window>